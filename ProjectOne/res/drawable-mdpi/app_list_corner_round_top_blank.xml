        <gradient android:startColor="#FFFFFF"
                  android:endColor="#FFFFFF"
                  android:angle="270"/>
        <corners android:topLeftRadius="6dip"
                 android:topRightRadius="6dip"/>
        <stroke
            android:width="1px"
            android:color="@color/gray" />

    </shape>
</item>
</layer-list>