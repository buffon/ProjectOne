<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@color/white"
                android:orientation="vertical" >


    <com.yehui.androidwithtest.ProjectOne.view.CornerListView
        android:id="@+id/list1"
        android:layout_width="fill_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_bg_listview"
        android:cacheColorHint="@null"/>
    <com.yehui.androidwithtest.ProjectOne.view.CornerListView
        android:id="@+id/list2"
        android:layout_below="@id/list1"
        android:layout_width="fill_parent"
        android:layout_marginTop="30dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_bg_listview"
        android:cacheColorHint="@null"/>
    <com.yehui.androidwithtest.ProjectOne.view.CornerListView
        android:id="@+id/list3"
        android:layout_width="fill_parent"
        android:layout_marginTop="30dp"
        android:layout_below="@id/list2"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/shape_bg_listview"
        android:cacheColorHint="@null"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/list3"
        android:text="【获取图片】"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button2"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/button"
        android:text="download"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_below="@id/button2"
        android:text="【开始视频】"
        />

    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/button"
        android:layout_below="@id/list3"
        android:layout_width="400px"
        android:layout_height="600px"
        android:clickable="true"
        android:background="#FF7000"
        android:id="@+id/image"
        />
    <ImageView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:layout_toRightOf="@id/image"
        android:layout_below="@id/list3"
        android:layout_width="350px"
        android:layout_height="350px"
        android:background="#FF7000"
        android:clickable="true"
        android:id="@+id/image3"
        />
    <VideoView
        android:layout_marginLeft="15dp"
        android:layout_marginTop="30dp"
        android:id="@+id/image2"
        android:layout_marginBottom="20dp"
        android:layout_below="@id/list3"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_toRightOf="@+id/image3"
        />
</RelativeLayout>